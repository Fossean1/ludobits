[project]
title = Ludobits
version = 0.7.6
dependencies = https://github.com/britzl/deftest/archive/master.zip

[bootstrap]
main_collection = /examples/examples.collectionc
render = /builtins/render/default.renderc

[input]
game_binding = /ludobits/m/input/all.input_bindingc

[display]
width = 1280
height = 720

[physics]
scale = 0.02
debug = 0
gravity_y = 0

[script]
shared_state = 1

[library]
include_dirs = ludobits

[graphics]
max_debug_vertices = 50000

[collection_proxy]
max_count = 16

