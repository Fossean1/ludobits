[project]
title = Ludobits
version = 0.7.6
dependencies = https://github.com/britzl/deftest/archive/2.1.1.zip,https://github.com/britzl/defold-input/archive/1.3.0.zip

[bootstrap]
main_collection = /examples/examples.collectionc
render = /builtins/render/default.renderc

[input]
game_binding = /in/bindings/all.input_bindingc
gamepads = /in/gamepads/in.gamepadsc

[display]
width = 1280
height = 720

[physics]
scale = 0.02
debug = 0
gravity_y = 0

[script]
shared_state = 1

[library]
include_dirs = ludobits

[graphics]
max_debug_vertices = 50000

[collection_proxy]
max_count = 16

